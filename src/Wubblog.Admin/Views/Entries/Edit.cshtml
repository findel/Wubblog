@model Wubblog.Library.Entry
@{
	Layout = "Views/Shared/_LayoutPage.cshtml";
}
<form action="/entries/@Model.EntryId/" method="POST">
	
	<h2>Edit Entry: @Model.Title</h2>
	
	<p>
	<label>
	Reference: <br /><input type="text" name="reference" value="@Model.Reference" />
	</label>
	</p>
	
	<p>
	<label>
	Title: <br /><input type="text" name="title" value="@Model.Title" />
	</label>
	</p>
	
	<p>
	<label>
	Description: <br />
	<textarea name="description">
	@Model.Description
	</textarea>
	</label>
	</p>
	
	<p>
	<label>
	Content: <br />
	<textarea name="markdown">
	@Model.Markdown
	</textarea>
	</label>
	</p>
	
	<p>
	<label>
	Keywords: <br /><input type="text" name="keywords" value="@Model.Keywords" />
	</label>
	</p>
	
	<p>
	<button type="submit">Save</button>
	</p>
	
</form>


